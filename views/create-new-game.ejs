<html>
   <head>
    <% include partials/template/head.ejs %>
    <script src="public/js/create-game.js"></script>
  </head>
  <body> 
    <% include partials/template/jumbotron.ejs %>

    <div class="container-fluid main" style="margin-top: 50px;">   
      <div class="row">
        <div class="col-sm-1">
          <form id="joinForm" action="/game" method="post"> 
            <input type="hidden" id="player_no" name="player_no" value="1" /> 
            <input type="hidden" id="game_id" name="game_id" /> 
          </form>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label for="game_name">Game :</label>
            <input type="text" class="form-control" id="game_name" name="game_name">
          </div>
          <div class="form-group">
            <input type="button" id="create_game" class="btn btn-success" value="Create" class="form-control"/> 
          </div>
        </div> 
        <div class="col-sm-5 well">
            <ul id="system-msgs" class="list-unstyled">
              <h4>Enter a name for the new game.</h4>
            </ul>
        </div>       
        <div class="col-sm-1">
          <input type="hidden" id="username" value="<%= username %>" /> 
          <input type="hidden" id="playerid" value="<%= playerid %>" /> 
        </div>
      </div>     
      
    </div>
  </body>
</html>