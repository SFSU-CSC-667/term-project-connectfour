          <ul id="messages"></ul>
          <span id="notifyUser"></span>
          <form id="form" action="" onsubmit="return submitfunction();" > 
            <input type="hidden" id="user" value="<%= username %>" /> 
            <div class="col-sm-10">
            <input id="m" autocomplete="off" onkeyup="notifyTyping();" placeholder="Type yor message here.." type="text" class="form-control"/>
            </div>
            <div class="col-sm-2">
            <input type="submit" id="send" class="btn btn-success" value="Send" class="form-control"/> 
            </div>
          </form>   
        </div>
        <div class="col-sm-6">    
          <div class="info">
            <h1 class="title">Play Connect Four!</h1>
            <h2 class="message"><span class="prefix"></span><span id="player" class="player">&nbsp;</span></h2>
